<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security.xsd">


    <http pattern="/resources/**" security="none" />        
    <http pattern="/login.jsp*" security="none"/>
    
    <http pattern="/ws/**" use-expressions="true" create-session="stateless">
        <intercept-url pattern="/**"  access="hasRole('ROLE_SOAP')"/>
        <http-basic/>
    </http>    
    
    <http auto-config='true'>
        <intercept-url pattern="/**" access="ROLE_USER" />
        <form-login login-page='/login.jsp' authentication-failure-url="/login.jsp?auth=fail"/>
        
        <logout invalidate-session="true" logout-url="/logout" logout-success-url="/" />
    </http>
            
    <authentication-manager>
        <authentication-provider>
            <user-service>
                <user name="rest" password="rest" authorities="ROLE_SOAP" />
            </user-service>
        </authentication-provider>
                
        <authentication-provider user-service-ref="employeeUserDetailsService"></authentication-provider>
    </authentication-manager>
    
    <global-method-security secured-annotations="enabled" />    

</beans:beans>
